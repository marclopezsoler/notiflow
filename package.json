    "@types/react-dom": "^19.1.6",
    "@types/testing-library__react": "^10.0.1",
    "jsdom": "^27.4.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tsup": "^8.5.0",
    "typescript": "~5.8.3",
    "vitest": "^4.0.16"
  },
  "keywords": [
